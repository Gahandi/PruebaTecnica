APP_NAME="Sistema de Boletos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://prueba.gahandi.dev

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de datos
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ticket_system
DB_USERNAME=root
DB_PASSWORD=

# Para Docker
# DB_HOST=db
# DB_USERNAME=ticket_user
# DB_PASSWORD=ticket_password

# Para producción
# APP_URL=https://prueba.gahandi.dev
# DB_HOST=your-db-host
# DB_DATABASE=your-db-name
# DB_USERNAME=your-db-user
# DB_PASSWORD=your-db-password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (opcional)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Para Docker
# REDIS_HOST=redis

# Para producción
# REDIS_URL=redis://user:password@host:port

# Cache y sesiones con Redis
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

MEMCACHED_HOST=127.0.0.1

# Email
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Para producción
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your-email@gmail.com
# MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Configuración específica del sistema de boletos
TICKET_QR_SIZE=200
TICKET_QR_MARGIN=4
TICKET_QR_ERROR_CORRECTION=M

# Configuración de impuestos
TAX_RATE=16
TAX_NAME="IVA"

# Configuración de cupones
COUPON_DEFAULT_USAGE_LIMIT=100
COUPON_DEFAULT_MIN_ORDER_AMOUNT=100

# Configuración de tickets
TICKET_SEAT_NUMBER_PREFIX=A
TICKET_SEAT_NUMBER_START=001

# Configuración de eventos
EVENT_DEFAULT_STATUS=active
EVENT_DEFAULT_CAPACITY=100

# Configuración de órdenes
ORDER_DEFAULT_STATUS=pending
ORDER_AUTO_COMPLETE_AFTER_MINUTES=30

# Configuración de check-in
CHECKIN_AUTO_MARK_USED=true
CHECKIN_ALLOW_MULTIPLE=false

# Configuración de seguridad
RATE_LIMIT_API=60
RATE_LIMIT_ORDERS=10
RATE_LIMIT_LOGIN=5

# Configuración de logs
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=2000

# Configuración de backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Configuración de monitoreo
MONITORING_ENABLED=false
MONITORING_EMAIL=admin@example.com

# Configuración de notificaciones
NOTIFICATIONS_ENABLED=true
NOTIFICATION_EMAIL_ORDERS=true
NOTIFICATION_EMAIL_CHECKINS=true

# Configuración de archivos
FILE_UPLOAD_MAX_SIZE=2048
FILE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf

# Configuración de cache
CACHE_TTL_EVENTS=3600
CACHE_TTL_TICKET_TYPES=1800
CACHE_TTL_COUPONS=1800

# Configuración de API
API_VERSION=v1
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# Configuración de desarrollo
DEV_MODE=false
DEV_EMAIL_OVERRIDE=
DEV_SKIP_EMAIL_VERIFICATION=false

# Configuración de testing
TESTING_DATABASE=ticket_system_test
TESTING_EMAIL=test@example.com

# Configuración de producción
PRODUCTION_OPTIMIZE=true
PRODUCTION_COMPRESS_ASSETS=true
PRODUCTION_MINIFY_HTML=true
